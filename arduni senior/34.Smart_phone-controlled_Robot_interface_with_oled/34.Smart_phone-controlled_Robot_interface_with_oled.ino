void loop() {  

if(Serial.available()>0) 
var= Serial.read(); 
Serial.println(var); 
if(var=='F') 
{
 forward(); 

 }
 else if(var=='B') 
 {
 backward(); 

 }
 else if(var=='L') 
 {
 left(); 

 }
 else if(var=='R') 
 {
 right(); 

 }
 else{
 stop_now(); 
}
}
